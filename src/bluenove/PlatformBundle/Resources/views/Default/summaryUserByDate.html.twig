
{% extends '::layout.html.twig' %}

{% block body -%}


    <div class="panel-body">
        <div class="table-responsive">
            <table id="dataTables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Id</th>
                        <th>Company</th>
                        <th>Job title</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Phone numbers</th>
{#                        <th>Nb Likes</th>#}
                        <th>Nb Post</th>
                        <th>Nb Com</th>
                        <th>Nb Publi</th>
                        <th>Activated at</th>
                        <th>Date Last Publi</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="{{ cycle(['odd', 'even'], loop.index0) }} gradeX">
                            <td>{{ user.name }}</td>
                            <td>{{ user.userId }}</td>
                            <td>{{ user.networkName }}</td>
                            <td>{{ user.jobTitle}}</td>
                            <td>{{ user.departement }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phoneNumbers}}</td>
{#                            <td>{{ user.nbTempLikes }}</td>#}
                            <td>{{ user.nbTempPost }}</td>
                            <td>{{ user.nbTempCom }}</td>
                            <td>{{ user.nbTempPost +  user.nbTempCom  }}</td>
                            <td><span class="hide">{{user.dateInscription|date('Y-m-d H:i:s')}} - </span>{{ user.dateInscription|date('d/m/y ') }}</td>
                            <td><span class="hide">{{user.dateLastPubliTemp|date('Y-m-d H:i:s')}} - </span>{{ user.dateLastPubliTemp|date('d/m/y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
        {#        {{dump(users)}}#}
    </div>
    <div>
        <a class="btn  btn-sm btn-success btn-block" href="{{ path('export_excel_user_date') }}">export to excel</a>
    </div>
{% endblock %}

