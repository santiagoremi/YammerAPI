
{% extends '::layout.html.twig' %}

{% block body -%}

    <div>
        <td align="right">Date de d√©but</td>
        <td>
            <input type="text" name="date_debut" id="date_debut" /> 
        </td>

        <td align="right">Date de fin</td>
        <td>
            <input type="text" name="date_fin" id="date_fin" /> 
        </td>
        <td> <input type="button" onclick ="getDateUser();" />Filtrer par date</td>
        <td><a class="pure-button" href="{{ path('display_user_by_date') }}">Display by date</a></td>

    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table id="dataTables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Id</th>
                        <th>Company</th>
                        <th>Job title</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Phone numbers</th>
                        <th>Nb Likes</th>
                        <th>Nb Post</th>
                        <th>Nb Com</th>
                        <th>Nb Publi</th>
                        <th>Activated at</th>
                        <th>Date Last Publi</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="{{ cycle(['odd', 'even'], loop.index0) }} gradeX">
                            <td>{{ user.name }}</td>
                            <td>{{ user.userId }}</td>
                            <td>{{ user.networkName }}</td>
                            <td>{{ user.jobTitle}}</td>
                            <td>{{ user.departement }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phoneNumbers}}</td>
                            <td>{{ user.nbLikes }}</td>
                            <td>{{ user.nbPost }}</td>
                            <td>{{ user.nbCom }}</td>
                            <td>{{ user.nbPubli }}</td>
                            <td><span class="hide">{{user.dateInscription|date('Y-m-d H:i:s')}} - </span>{{ user.dateInscription|date('d/m/y ') }}</td>
                            <td><span class="hide">{{user.dateLastPubli|date('Y-m-d H:i:s')}} - </span>{{ user.dateLastPubli|date('d/m/y ') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>

        <div>

           


            <a class="btn  btn-sm btn-success btn-block" href="{{ path('export_excel_user') }}">export to excel</a>
        </div>
        {#        {{dump(users)}}#}
    </div>
{% endblock %}

